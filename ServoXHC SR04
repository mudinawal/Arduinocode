#include <Servo.h>

Servo servo1;
#define TriggerPin 6
#define EchoPin 7

void setup() {
  pinMode(TriggerPin, OUTPUT);
  pinMode(EchoPin, INPUT);
  servo1.attach(5);
  Serial.begin(9600);
}

void loop() {
  digitalWrite(TriggerPin, LOW);
  delayMicroseconds(2);
  digitalWrite(TriggerPin, HIGH);
  delayMicroseconds(2);
  digitalWrite(TriggerPin, LOW);

  long duration = pulseIn(EchoPin, HIGH, 30000); 
  int distance = (duration * 0.034) / 2;

  if (distance < 20) {
    servo1.write(180);
  } else {
    servo1.write(0);
  }

  Serial.println(distance);
  delay(500); // lebih responsif
}
